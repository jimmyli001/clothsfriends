<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base_content"
    android:padding="8dp"
    android:orientation="horizontal" >
    <ImageView 
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar3"
        android:scaleType="fitXY"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp">
        <TextView 
            android:id="@+id/tv_circle_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#夏天buybuy#"
            android:textColor="@color/black"/>
         <TextView 
            android:id="@+id/tv_circle_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="好会买的帅哥妹子们都在这里，快来加入，互相分享学习，让夏天美起来！！！"
            android:singleLine="true"/>
          <TextView 
            android:id="@+id/tv_circle_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="123475人参与"/>
    </LinearLayout>

</LinearLayout>
