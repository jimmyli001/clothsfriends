<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base_content"
    android:orientation="vertical" >

    <include
        android:id="@+id/incloude_title"
        android:layout_alignParentTop="true"
        layout="@layout/title_base" >
    </include>

    <LinearLayout
        android:id="@+id/ll_comment_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incloude_title"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp" >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/commenticon"/>

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部5条用户评论"
                android:textColor="@color/color_4c4c4c"
                android:layout_marginLeft="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#dbdbdb"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_comment_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_comment_send"
        android:layout_below="@id/ll_comment_count"
        android:background="#ffffff" >
    </ListView>

    <LinearLayout
        android:id="@+id/ll_comment_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#dbdbdb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/commnetedit"
                android:hint="点击这里添加评价"
                android:textColor="#b2b2b2"
                android:layout_marginLeft="6dp"
                android:paddingLeft="8dp"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_comment_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lookicon" />

                <TextView
                    android:id="@+id/tv_comment_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="发送"
                    android:textColor="@color/color_808080"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>